<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6200ea"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"

        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_marginBottom="16sp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="#fafafa"
        android:layout_marginTop="36dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHO ARE YOU"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="#4327a0"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/relative_parent"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#fdd835"

                >
        <ImageView
            android:id="@+id/parent_photo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_collaboration"
            android:background="@drawable/edit_curves"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Parent"
            android:layout_below="@id/parent_photo"
            />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#fb8c00"

                >
            <ImageView
                android:id="@+id/child_photo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_network"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent"
                android:layout_below="@id/child_photo"

                />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#1976d2">
             <ImageView
                 android:id="@+id/teacher_photo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/user"
                   />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent"
                android:layout_below="@id/teacher_photo"
                android:gravity="center"
                />
            </RelativeLayout>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edit_curves"
            android:drawableLeft="@drawable/user"
            android:height="34dp"
            android:drawablePadding="16dp"
            android:paddingLeft="16dp"
            android:textColorHint="#4327a0"


            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edit_curves"
            android:height="34dp"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/user"
            android:paddingLeft="16dp"
            android:textColorHint="#4327a0"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edit_curves"
            android:height="34dp"
            android:drawablePadding="16dp"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/user"
            android:textColorHint="#4327a0"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/edit_curves"
            android:height="34dp"
            android:drawablePadding="16dp"
            android:drawableLeft="@drawable/user"
            android:paddingLeft="16dp"
            android:textColorHint="#4327a0"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGNUP"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/signup_curves"
            android:textColor="#fafafa"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingTop="16dp"
           >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account. "
            android:textStyle="italic"
            android:textColor="#fafafa"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login here"
            android:textStyle="italic"
            android:textColor="#ff6d00"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>